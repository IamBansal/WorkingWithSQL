<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileInfo">

    <TextView
        android:id="@+id/tvInfo"
        android:text="Your Profile Info"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvInfoFirstName"
        android:text="your Profile Info"
        android:textSize="30dp"
        android:layout_above="@id/tvInfoLastName"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvInfoLastName"
        android:text="your Profile Info"
        android:textSize="30dp"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvInfoUsername"
        android:text="your Profile Info"
        android:textSize="30dp"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_below="@id/tvInfoLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvInfoPhone"
        android:text="your Profile Info"
        android:textSize="30dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/tvInfoUsername"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnUpadteInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Update"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnOkayInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Okay"
        android:textAllCaps="false" />

</RelativeLayout>